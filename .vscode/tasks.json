{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "get input for currently active day",
            "type": "shell",
            "command": "go run cmd/* get -y 2021 -d $(echo ${file} | cut -d '_' -f 2 | cut -d '.' -f 1)",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run solution for currently active day",
            "type": "shell",
            "command": "go run ${file}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
